@page
@model Taller.App.Front.Pages.GestionMecanicoModel
@{
}

<span>
    @Model.titulo
</span>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Ciudad</th>
        </tr>
    </thead>
    <tbody>


        @foreach (Mecani m in Model.listaMecanicos)
        {
            <tr>
                @if(m.nombre == "Davidcito"){
                    <td>@m.nombre</td>
                } else {
                    <td>Malo</td>
                }
            
                <td>@m.especialidad</td>
                <td>@m.ciudad</td>
            </tr>
        }

    </tbody>
</table>